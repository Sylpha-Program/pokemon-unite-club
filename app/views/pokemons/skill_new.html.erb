<div class="text-center">
  <p>
    <img class="rounded" src=<%= "/pokemons/#{@pokemon.image}" %> alt="Pokemon" width="160px" height="160px">
  </p>
  <p><%= link_to @pokemon.name, pokemon_path(@pokemon), class: 'font-weight-bold h4' %></p>
</div>
<div class="row my-5">
  <div class="offset-xl-4 col-xl-4 offset-md-3 col-md-6">
    <%= form_with(url: "/pokemons/#{@pokemon.id}/skill_create", local: true) do |f| %>
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :image, '画像' %>
        <%= f.text_field :image, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :button, 'ボタン' %>
        <%= f.select :button, {'Rボタン': 'Rボタン', 'ZRボタン': 'ZRボタン'}, {prompt: '選択してください'}, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.label :attack_category, '分類' %>
        <%= f.select :attack_category, {'攻撃': '攻撃', '特攻': '特攻', '変化': '変化'}, {prompt: '選択してください'}, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.label :level, 'レベル' %>
        <%= f.number_field(:level, class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= f.label :cool_time, '待ち時間' %>
        <%= f.number_field(:cool_time, class: 'form-control', step: "0.1") %>
      </div>
      <div class="form-group">
        <%= f.label :attack_type, 'タイプ' %>
        <%= f.text_field(:attack_type, class: 'form-control') %>
      </div>
      <%= f.submit '登録する', class: 'btn btn-primary btn-block mt-5' %>
    <% end %>
  </div>
</div>
