<div class="text-center mb-5">
  <h1>もちもの一覧</h1>
  <div class="row mt-5">
    <% @tools.each do |tool| %>
      <div class="col-xl-3 col-lg-4 col-md-6 border pt-5 pb-3">
        <p>
          <img class="rounded" src=<%= "/tools/#{tool.image}" %> alt="Tool" width="100px" height="100px">
        </p>
        <p class="font-weight-bold h4"><%= tool.name %></p>
      </div>
    <% end %>
  </div>
</div>
