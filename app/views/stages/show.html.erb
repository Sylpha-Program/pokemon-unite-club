<div class="text-center mb-5">
  <h1 class="h4 font-weight-bold"><%= @stage.name %></h1>
  <p class="mt-5">
    <img class="rounded" src=<%= "/stages/#{@stage.image}" %> alt="Stage" width="400px" height="200px">
  </p>
  <div class="row mt-5">
    <table class="offset-lg-3 col-lg-6 table table-bordered">
      <tr>
        <th>ポケモン</th>
        <th>合計ポイント</th>
        <th>最高ポイント</th>
      </tr>
      <% @scores.each do |score| %>
        <tr>
          <th><%= score.pokemon.name %></th>
          <td><%= score.total_point %></td>
          <td><%= score.max_point %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
