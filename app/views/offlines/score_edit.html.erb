<div class="row my-5">
  <div class="offset-xl-4 col-xl-4 offset-md-3 col-md-6">
    <%= form_with(url: "/offlines/score", local: true) do |f| %>
      <div class="form-group">
        <%= f.label :pokemon, 'ポケモン' %>
        <%= f.collection_select(:pokemon_id, @pokemons, :id, :name, {prompt: "選択してください"}, {class: 'form-control'}) %>
      </div>
      <div class="form-group">
        <%= f.label :point, 'ポイント' %>
        <%= f.number_field(:point, class: 'form-control') %>
      </div>
      <%= f.submit '登録する', class: 'btn btn-primary btn-block mt-5' %>
    <% end %>
  </div>
</div>
